<h2>Lista de Postagens:</h2>
<hr>
 <a href="/admin/postagens/add"><button   class="btn btn-sucess">Nova postagens</button>

 {{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>Descrição: {{descricao}}</p>
        <small>Data: {{data}}</small><br>
        <small>Categoria: {{categoria.nome}}</small><br>
        <br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success">Editar postagem</button></a>
        <form action="/admin/postagens/deletar/{{_id}}" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <br>
                <button type="submit" class="btn btn-danger mt-">Deletar categoria</button>
            </form>



    </div>
  </div>
  {{else}}
   <p>Nenhuma postagem registrada!</p>
 {{/each}}  